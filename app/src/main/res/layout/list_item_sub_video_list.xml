<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/sub_video_height"
    android:padding="3dp">

    <ImageView
        android:id="@+id/imVid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:layout_above="@+id/tvCatTitle"
        />

    <TextView
        android:id="@+id/tvCatTitle"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:text="Sub Category 1"/>

    <ImageView
        android:layout_margin="5dp"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/play_button"
        android:layout_above="@+id/tvCatTitle"/>

    <TextView
        android:layout_margin="5dp"
        android:id="@+id/btnViewPdf"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textSize="@dimen/text_size_small"
        android:textStyle="bold"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/button_height1"
        android:background="@drawable/bg_rounded_xml"
        android:textColor="#FFF"
        android:text="View PDF"/>

    <TextView
        android:id="@+id/tvFree"
        android:layout_margin="5dp"
        android:layout_alignParentRight="true"
        android:layout_above="@+id/tvCatTitle"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textSize="@dimen/text_size_small"
        android:textStyle="bold"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/button_height1"
        android:background="@drawable/bg_rounded_blue"
        android:textColor="#FFF"
        android:text="Free"/>

</RelativeLayout>